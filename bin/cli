#!/usr/bin/env node
const path = require('path');
const program = require('commander');
const chalk = require('chalk');
const pkg = require('../package');

const res = (command) => path.resolve(__dirname, '../commands/', command);

program.version(chalk.green(`${pkg.version}`));

program
    .command('eslintHusky')
    .description('项目添加eslint/husky配置')
    .alias('eh')
    .action(() => {
        require(res('eslintHusky'))();
    });

program
    .command('husky')
    .description('项目添加husky配置')
    .alias('h')
    .action(() => {
        require(res('husky'))();
    });

program
    .command('eslint')
    .description('项目添加eslint配置')
    .alias('e')
    .action(() => {
        require(res('eslint'))();
    });

program
    .command('cicd')
    .description('项目添加cicd配置')
    .alias('c')
    .action(() => {
        require(res('cicd'))();
    });

program
    .command('vite')
    .description('项目启动vite')
    .alias('v')
    .action(() => {
        require(res('vite/index.js'))();
    });

program
    .command('slim')
    .description('去除项目中的无用文件')
    .alias('s')
    .action(() => {
        require(res('slim'))();
    });

program
    .command('slim-package')
    .description('去除package中无效的依赖')
    .alias('sp')
    .action(() => {
        require(res('slimPackage'))();
    });

program
    .command('css-var')
    .description('抽取css变量')
    .alias('cv')
    .action(() => {
        require(res('cssVar/index.js'))();
    });

program
    .command('cursor')
    .description('生成cursor规则')
    .alias('cs')
    .action(() => {
        require(res('cursor.js'))();
    });

program
    .command('removeI18N')
    .description('打包去掉代码中的I18N')
    .alias('rI')
    .action(() => {
        require(res('removeI18N.js'))();
    });

program
    .command('depcheck')
    .description('查找项目中的幽灵依赖')
    .alias('dep')
    .action(() => {
        require(res('depcheck/index.js'))();
    });

program.parse(process.argv);
